if game.PlaceId == 9421227126 then
 
local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/shlexware/Orion/main/source')))()
local Window = OrionLib:MakeWindow({Name = "The Dank Murderer 2", HidePremium = false, SaveConfig = false, ConfigFolder = "OrionTest"})

_G.hatch = true

function hatch()
       while _G.hatch == true do
       local args = {
    [1] = "Amethyst Crate"
}

game:GetService("ReplicatedStorage"):WaitForChild("Events"):WaitForChild("OpenCrate"):FireServer(unpack(args))
      wait(1)
     end
end

local hatchTab = Window:MakeTab({
	Name = "Main",
	Icon = "rbxassetid://4483345998",
	PremiumOnly = false
})


hatchTab:AddToggle({
	Name = "Auto Open Amethys Crate",
	Default = false,
	Callback = function(Value)
		_G.hatch = Value
        hatch()
	end    
})

end
